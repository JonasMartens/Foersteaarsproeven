<Window x:Class="ProudChickenEksamenProjektWPFMain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProudChickenEksamenProjektWPFMain"
        mc:Ignorable="d"
        Title="ProudChicken" Height="450" Width="800"
        Background="#FAFAFA"
        FontFamily="Segoe UI"
        FontSize="14">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Venstre kolonne med knapper -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="200">
            <Button Content="Send Besked"
                    Height="60"
                    Margin="0,0,0,20"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="Button_Click"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <Button Content="Søg"
                    Height="60"
                    Margin="0"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Højre kolonne med logo -->
        <Image Grid.Column="1"
               Source="/LOGO.jpg"
               Stretch="Uniform"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Margin="20"/>
    </Grid>
</Window>
